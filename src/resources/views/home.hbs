<div class="mt-4 ">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card mb-4">
                <a href="/courses/{{this.slug}}">
                    {{!-- <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}"> --}}
                    <div class="parent-img">
                        <div class="card-img-parent" style="background-image: url({{this.image}});"></div>
                    </div>
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" class="text-decoration-none text-reset">
                        <h5 class="card-title text-primary">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">H·ªçc ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
